---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  content: {
    title: string;
    excerpt: string;
    pubDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, pubDate, heroImage },
} = Astro.props;
---

<BaseLayout>
  <article>
    {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
    <h1 class="title">{title}</h1>
    {
      pubDate && (
        <time>
          <strong>Published:</strong> {pubDate.substring(0, 10)}
        </time>
      )
    }
    <slot />
  </article>
</BaseLayout>

<style>
  h1 {
    font-size: 3rem;
    margin-top: 1rem;
  }

  time {
    font-size: 0.8rem;
  }
</style>
