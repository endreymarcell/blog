---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  content: {
    title: string;
    excerpt: string;
    pubDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, pubDate, heroImage },
} = Astro.props;
---

<BaseLayout>
  <article>
    {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
    <h1 class="title">{title}</h1>
    {pubDate && <time>{pubDate.substring(0, 10)}</time>}
    <hr />
    <slot />
  </article>
</BaseLayout>
